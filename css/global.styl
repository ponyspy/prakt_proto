body
	margin 0
	padding 0

.title_block
	background-color lightgrey
	overflow hidden
	display flex
	justify-content space-between
	.nav_block
		float left
		background-color green
		padding-top 20px
		a
			margin-right 10px
			&:last-child
				margin 0
	.menu_open
		background-color grey
		width 40px
		height 40px
		background-image url('../img/menu.svg')
		background-size contain
		background-position center
		background-repeat no-repeat
		float left
	.menu_block
		a
			float left
			display block
			color black
			text-decoration none
			margin-right 20px
			&:last-child
				margin-right 0
			&:hover
				text-decoration underline
		.menu_items
			float left
			.items_drop
				display none
	.logo
		padding 20px
		width 120px


.footer_block
	.quality_block img
			width 45px