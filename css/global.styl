body
	margin 0
	padding 0

.title_block
	background-color lightgrey
	overflow hidden
	text-align center
	height 160px
	font 12pt/14pt 'PT Mono'
	.nav_block
		display inline-block
		overflow hidden
		.search
			margin-top 13px
		.lang
			margin-top 15px
			&:hover
				text-decoration underline
		a
			display block
			float left
			color black
			text-decoration none
			margin-right 20px
			&:last-child
				margin-right 0
	.menu_open
		width 40px
		height 40px
		background-image url('../img/menu.svg')
		background-size contain
		background-position center
		background-repeat no-repeat
		float left
	.menu_block
		position absolute
		left 20px
		padding-top 5px
		a
			margin-top 5px
			float left
			display block
			color black
			text-decoration none
			margin-left 40px
			&:hover
				text-decoration underline
		.menu_items
			margin-top 5px
			float left
			text-align left
			&.open
				a
					margin-bottom 15px
					margin-right 0
					float none
				.items_drop
					display block
			.items_drop
				display none
	.logo
		padding 20px
		width 120px
		position absolute
		right 0


.footer_block
	.quality_block img
			width 45px