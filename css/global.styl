body
	margin 0
	padding 0

.title_block
	background-color lightgrey
	overflow hidden
	.menu_block
		float left
		a
			color black
			text-decoration none
			margin-right 20px
			&:hover
				text-decoration underline
		.menu_open
			background-color grey
			width 40px
			height 40px
			background-image url('../img/menu.svg')
			background-size contain
			background-position center
			background-repeat no-repeat
		.menu_drop
			display none
	.logo
		padding 20px
		width 120px
		float right


.footer_block
	.quality_block img
			width 45px