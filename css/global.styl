body
	margin 0
	padding 0

.title_block
	background-color lightgrey
	overflow hidden
	text-align center
	height 160px
	font 12pt/14pt 'PT Mono'
	.nav_block
		display inline-block
		overflow hidden
		.search
			margin-top 13px
		.lang
			margin-top 15px
			&:hover
				text-decoration underline
		a
			display block
			float left
			color black
			text-decoration none
			margin-right 20px
			&:last-child
				margin-right 0
	.menu_open
		width 40px
		height 40px
		background-image url('../img/menu.svg')
		background-size contain
		background-position center
		background-repeat no-repeat
		float left
	.menu_block
		position absolute
		left 20px
		padding-top 5px
		a
			margin-top 5px
			float left
			display block
			color black
			text-decoration none
			margin-left 40px
			&:hover
				text-decoration underline
		.menu_items
			margin-top 5px
			float left
			text-align left
			&.open
				a
					margin-bottom 15px
					margin-right 0
					float none
				.items_drop
					display block
			.items_drop
				display none
	.logo
		padding 20px
		width 120px
		position absolute
		right 0


.footer_block
	background-color rgba(131, 193, 216, 1.000)
	display flex
	justify-content space-between
	font 12pt/14pt 'PT Mono'
	border-top 1px solid black
	padding-top 20px
	padding-bottom 10px
	a
		color black
		text-decoration none
	.logo_dep
		margin-left 20px
		img
			display block
			width 120px
	.social_block
		margin-right 20px
		a
			margin-left 20px
	.quality_block
		a
			display inline-block
			max-width 280px
			border-right 1px solid black
			padding-right 20px
			margin-right 20px
			&:last-child
				margin 0
				padding 0
				border none
		img
			width 45px
			float left
			display block
			margin-right 15px