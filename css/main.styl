html, body
	height 100%

.title_block
	position absolute
	a
		color white!important
	.search, .logo, .menu_open
		filter: invert(100%)

.footer_block
	position absolute
	bottom 0
	.footer_inner
		border-color white
		.quality_block a
			border-color white
	img
		filter: invert(100%)
	a
		color white!important

.content_block
	position absolute
	width 100%
	height 100%
	background-color black

.slider_block
	width 100%
	height 100%
	opacity 0.8
	.slide_item
		width 100%
		height 100%
		background-size cover
		background-position center
		background-repeat no-repeat
	.swiper-pagination
		bottom 110px
		left auto!important
		right 40px!important
		width auto