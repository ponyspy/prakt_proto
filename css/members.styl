.content_block
	max-width 960px
	margin 0 auto
	padding-left 35px
	padding-right 35px

.members_header
	top 160px
	left 0
	width 100%
	padding-top 20px
	background-color white
	position absolute
	z-index 999
	.members_header_inner
		margin 0 auto
		max-width 960px
		padding-left 35px
		padding-right 35px
	&.fix
		position fixed
		top 0

.members_title
	font 22pt/24pt 'PT Mono Bold'
	margin-bottom 10px

.members_category
	font 14pt/16pt 'PT Mono'
	margin-bottom 20px
	cursor pointer
	&:after
		content ''
		z-index 0
		position relative
		background-image url('../img/arrow_list.svg')
		width 8px
		height 8px
		margin-left 15px
		display inline-block
		transform rotate(90deg)
		vertical-align middle
		background-position top
		background-size contain
		background-repeat no-repeat


.outer
	margin-top 100px
	margin-bottom 60px
	overflow hidden
	// background-color green
	padding 10px
	box-sizing border-box
	margin-left -20px
	margin-right -20px

.block
	text-align center
	float left
	width 16.666666667%
	padding-top 16.666666667%
	box-sizing border-box
	position relative
	&.active
		&:after
			content ''
			display block
			bottom -10px
			position absolute
			left 0
			right 0
			margin auto
			width 0
			height 0
			border 0 solid transparent
			border-right-width 10px
			border-left-width 10px
			border-bottom 10px solid violet
	.in
		position absolute
		top 10px
		left 10px
		right 10px
		bottom 10px
		margin auto
		background-color grey

.panel
	float left
	width 100%
	.in
		padding 10px
		box-sizing border-box
		margin 10px
		background-color violet