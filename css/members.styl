.content_block
	max-width 960px
	margin 0 auto
	padding-left 35px
	padding-right 35px

.members_header
	top 160px
	left 0
	width 100%
	padding-top 20px
	background-color white
	position absolute
	z-index 999
	.members_header_inner
		margin 0 auto
		max-width 960px
		padding-left 35px
		padding-right 35px
	&.fix
		position fixed
		top 0

.members_title
	font 22pt/24pt 'PT Mono Bold'
	margin-bottom 10px

.members_category
	font 14pt/16pt 'PT Mono'
	margin-bottom 20px
	cursor pointer
	display inline-block
	&:after
		content ''
		z-index 0
		position relative
		background-image url('../img/arrow_list.svg')
		width 8px
		height 8px
		margin-left 15px
		display inline-block
		transform rotate(90deg)
		vertical-align middle
		background-position top
		background-size contain
		background-repeat no-repeat


.members_list
	margin-top 100px
	margin-bottom 60px
	overflow hidden
	// background-color green
	padding 10px
	box-sizing border-box
	margin-left -20px
	margin-right -20px

.member_item
	text-align center
	float left
	width 16.666666667%
	padding-top 16.666666667%
	box-sizing border-box
	position relative
	&.active .in
		border 20px solid white
	.in
		background-repeat no-repeat
		background-position center
		background-size cover
		position absolute
		top 10px
		left 10px
		right 10px
		bottom 10px
		margin auto
		background-color grey
		box-sizing border-box
		cursor pointer

.panel
	float left
	width 100%
	.in
		padding 10px
		box-sizing border-box
		// margin 10px
		overflow hidden
		.panel_photo
			width 49%
			height 380px
			float left
			background-position top
			background-size cover
			background-repeat no-repeat
		.panel_body
			width 51%
			float left
			padding-left 60px
			box-sizing border-box
			.member_head
				overflow hidden
				margin-bottom 30px
				.member_name
					font 26pt/28pt 'PT Mono Bold'
					max-width 220px
					float left
				.member_category
					float right
					font 12pt/14pt 'PT Mono Bold'
			.member_events
				margin-bottom 40px
				.events_title
					font 12pt/14pt 'PT Mono Bold'
				.events_list
					.event_item
						margin-top 5px
						color black
						text-decoration none
						display inline-block
						font 12pt/14pt 'PT Mono'
						margin-right 20px
						&:last-child
							margin-right 0
						&:hover
							opacity 0.7
			.member_description
				hyphens auto
				font 14pt/22pt 'PT Serif'
				p
					margin 0
					padding 0
					margin-bottom 20px