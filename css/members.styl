.content_block
	max-width 960px
	margin 0 auto
	padding-left 35px
	padding-right 35px


.members_title
	font 22pt/24pt 'PT Mono Bold'
	margin-top 20px
	margin-bottom 10px

.members_category
	font 14pt/16pt 'PT Mono'
	margin-bottom 40px
	cursor pointer
	&:after
		content ''
		z-index 0
		position relative
		background-image url('../img/arrow_list.svg')
		width 8px
		height 8px
		margin-left 15px
		display inline-block
		transform rotate(90deg)
		vertical-align middle
		background-position top
		background-size contain
		background-repeat no-repeat


.outer
	overflow hidden
	background-color green
	padding 5px
	box-sizing border-box

.block
	text-align center
	float left
	width 16.666666667%
	padding-top 16.666666667%
	box-sizing border-box
	position relative
	&.active
		&:after
			content ''
			display block
			bottom -5px
			position absolute
			left 0
			right 0
			margin auto
			width 0
			height 0
			border 0 solid transparent
			border-right-width 10px
			border-left-width 10px
			border-bottom 10px solid violet
	.in
		position absolute
		top 5px
		left 5px
		right 5px
		bottom 5px
		margin auto
		background-color grey

.panel
	float left
	width 100%
	.in
		padding 5px
		box-sizing border-box
		margin 5px
		background-color violet