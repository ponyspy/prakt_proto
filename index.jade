extends layout.jade

block content_styles
	link(rel='stylesheet', type='text/css', href='css/libs/swiper.min.css')
	link(rel='stylesheet', type='text/css', href='css/main.css')

block content_scripts
	script(type='text/javascript', src='js/libs/swiper.min.js')
	script(type='text/javascript', src='js/main.js')

block content
	.slider_block.swiper-container
		.swiper-wrapper
			each slide, i in new Array(3)
				.slide_item.swiper-slide(style='background-image: url(img/bg/' + (i+1) + '.jpg)')
		.swiper-pagination.swiper-pagination-white